{% extends 'layout.twig' %}

{% block content %}
	<div class="row">

		<!-- Sidebar LARGE -->
		 <aside class="col-md-2 d-none d-md-block sidebar">
		   	
		   	{% block sidebar %}
			{% endblock %}

		</aside>

		<!-- Main Content -->
		<main class="col-md-10 ml-sm-auto px-4">

			<!-- Header Page -->
			<header>
			  {% block headerpage %}
			  {% endblock %}

			  <!-- MESSAGE bar-->
			  {% include('includes/messages.twig') %}

			</header>

			<section class="container-fluid">
			  {% block main %}
			  {% endblock %}
			</section>

		</main>

	</div>
{% endblock content %}